@model IEnumerable<LogGet.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "Usuários";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <form method="get" class="d-flex" action="@Url.Action("Index")">
        <input type="text" name="q" value="@((string)ViewBag.Query)" class="form-control" placeholder="Buscar usuários (nome, login, e-mail)" style="width: 420px;" />
        <button type="submit" class="btn btn-primary ms-2">Buscar</button>
    </form>

    <a asp-action="Create" class="btn btn-success">Novo Usuário</a>
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Login</th>
            <th>E-mail</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Nome</td>
            <td>@u.Login</td>
            <td>@u.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Alterar</a>
                @if (u.IsActive)
                {
                    <form asp-action="Deactivate" method="post" style="display:inline" onsubmit="return confirm('Desativar usuário?');">
                        <input type="hidden" name="id" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1">Desativar</button>
                    </form>
                }
                else
                {
                    <form asp-action="Activate" method="post" style="display:inline" onsubmit="return confirm('Ativar usuário?');">
                        <input type="hidden" name="id" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-success ms-1">Ativar</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
