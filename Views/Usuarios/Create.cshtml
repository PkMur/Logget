@model LogGet.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Novo Usuário";
}

<div class="full-width-card card mt-4 shadow-sm">
        <div class="card-body">
            <h3 class="card-title mb-3">Novo Usuário</h3>

            <form asp-action="Create" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Nome" class="form-control" placeholder=" " />
                            <label asp-for="Nome">Nome completo</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="Nome"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" placeholder=" " />
                            <label asp-for="Email">E-mail</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="CPF" class="form-control" placeholder=" " />
                            <label asp-for="CPF">CPF</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="CPF"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="RG" class="form-control" placeholder=" " />
                            <label asp-for="RG">RG</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="RG"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="NomeDaMae" class="form-control" placeholder=" " />
                            <label asp-for="NomeDaMae">Nome da mãe</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="NomeDaMae"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Login" class="form-control" placeholder=" " />
                            <label asp-for="Login">Login</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="Login"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Senha" type="password" class="form-control" placeholder=" " />
                            <label asp-for="Senha">Senha</label>
                            <div class="invalid-feedback">
                                <span asp-validation-for="Senha"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4">Salvar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


