@model LogGet.Models.MotoristaViewModel

@{
    ViewData["Title"] = "Novo Motorista";
}

<div class="full-width-card card mt-4 shadow-sm">
    <div class="card-body">
        <h3 class="card-title mb-3">Novo Motorista</h3>

        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Nome" class="form-control" placeholder=" " />
                        <label asp-for="Nome">Nome completo</label>
                        <div class="invalid-feedback"><span asp-validation-for="Nome"></span></div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="CPF" class="form-control" placeholder=" " />
                        <label asp-for="CPF">CPF</label>
                        <div class="invalid-feedback"><span asp-validation-for="CPF"></span></div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="RG" class="form-control" placeholder=" " />
                        <label asp-for="RG">RG</label>
                        <div class="invalid-feedback"><span asp-validation-for="RG"></span></div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" placeholder=" " />
                        <label asp-for="Email">E-mail</label>
                        <div class="invalid-feedback"><span asp-validation-for="Email"></span></div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="TipoHabilitacao" class="form-control" placeholder=" " />
                        <label asp-for="TipoHabilitacao">Tipo Habilitação</label>
                        <div class="invalid-feedback"><span asp-validation-for="TipoHabilitacao"></span></div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="NumeroCnh" class="form-control" placeholder=" " />
                        <label asp-for="NumeroCnh">Número CNH</label>
                        <div class="invalid-feedback"><span asp-validation-for="NumeroCnh"></span></div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Veiculo" class="form-control" placeholder=" " />
                        <label asp-for="Veiculo">Veículo</label>
                        <div class="invalid-feedback"><span asp-validation-for="Veiculo"></span></div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Login" class="form-control" placeholder=" " />
                        <label asp-for="Login">Login</label>
                        <div class="invalid-feedback"><span asp-validation-for="Login"></span></div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Senha" type="password" class="form-control" placeholder=" " />
                        <label asp-for="Senha">Senha</label>
                        <div class="invalid-feedback"><span asp-validation-for="Senha"></span></div>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Salvar</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


