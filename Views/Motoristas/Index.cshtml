@model IEnumerable<LogGet.Models.MotoristaViewModel>

@{
    ViewData["Title"] = "Motoristas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <form method="get" class="d-flex" action="@Url.Action("Index")">
        <input type="text" name="q" value="@((string)ViewBag.Query)" class="form-control" placeholder="Buscar motoristas (nome, CPF, veículo)" style="width: 420px;" />
        <button type="submit" class="btn btn-primary ms-2">Buscar</button>
    </form>

    <a asp-action="Create" class="btn btn-success">Novo Motorista</a>
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Veículo</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Nome</td>
            <td>@m.CPF</td>
            <td>@m.Veiculo</td>
            <td>
                @if (m.IsActive)
                {
                    <span class="badge bg-success">Ativo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inativo</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-primary">Alterar</a>
                @if (m.IsActive)
                {
                    <form asp-action="Deactivate" asp-route-id="@m.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1" onclick="return confirm('Desativar motorista?')">Desativar</button>
                    </form>
                }
                else
                {
                    <form asp-action="Activate" asp-route-id="@m.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-success ms-1" onclick="return confirm('Ativar motorista?')">Ativar</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
